<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash"
    tools:context=".activity.AnimeDetailActivity">

    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAnimeDetail"
            android:layout_width="130dp"
            android:layout_height="180dp"/>

        <TextView
            android:id="@+id/tvTitleAnimeDetail"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexabold"
            android:text="@string/anime_title"
            android:textColor="#ffffff"
            android:textSize="21sp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/ivAnimeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvSynopsis"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/nexabold"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="Synopsis :"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/ivAnimeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDescriptionAnimeDetail"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:fontFamily="@font/nexalight"
            android:text="@string/anime_title"
            android:layout_below="@+id/tvSynopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAnimeEpisode"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tvDescriptionAnimeDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</ScrollView>